
<%= form_for(@tweet, :url => { controller:'tweets', action:'create'})do |f| %>
 <div class="field">
   <%= f.label :body %>
   <br>
   <%= f.hidden_field :body, id: :article_text %>
    <trix-editor input="article_text"></trix-editor>
 </div>
 <div class="field">
    <%= f.label "味" %>
    <span id="taste-star"></span>
    <%= f.hidden_field :taste, id: "post-taste-star" %>
  </div>
  <div class="field">
    <%= f.label "コストパフォーマンス" %>
    <span id="cost_performance-star"></span>
    <%= f.hidden_field :cost_performance, id: "post-cost_performance-star" %>
  </div>
 <div class="action">
   <%= f.submit %>
 </div>
<% end %>

<script>
  window.addEventListener('turbolinks:load',()=>{
    console.log("new");
    $('#taste-star').raty({
      path: "/",
      click: function(score, _) {
        $("#post-taste-star").val(score)
      }
    });
    $('#cost_performance-star').raty({
      path: "/",
      click: function(score, _) {
        $("#post-cost_performance-star").val(score)
      }
    });
  })

</script>
